node {
  try {
    stage('Checkout') {
      checkout scm
    }
    stage('Environment') {
      sh 'git --version'
      echo "Branch: ${env.BRANCH_NAME}"
      sh 'docker -v'
      sh 'printenv'
    }
  
    stage('Deploy'){
      if(env.BRANCH_NAME == 'master'){
        sh 'docker build -t chatscrum --no-cache .'
        sh 'docker tag chatscrum localhost:5000/chatscrum'
        sh 'docker push localhost:5000/chatscrum'
        sh 'docker rmi -f chatscrum localhost:5000/chatscrum'
      }
    }
  }
  catch (err) {
    throw err
  }
}
